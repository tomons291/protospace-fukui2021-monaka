<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
     <div class="greeting"> 
       こんにちは、 
      <%= link_to current_user.name , root_path, class: :greeting__link%>さん
     </div> 
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <a href="/prototypes/<%= prototype.id %>">
       <%= image_tag prototype.image, class: 'prototype-image' if prototype.image.attached? %>
      </a>
      <div class ="card">
        <div class="card_body">
         <div class="card_title">
          <a href="/prototypes/<%= prototype.id %>"></a>
         </div>
         <div class="card_summary">
          <p><%= prototype.catchcopy %></p>
         </div>
        </div>
      </div>
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
    </div>
  </div>
</main>
